<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.cart.view.activity.QueryOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ff5656"
        >

        <TextView
            android:id="@+id/query_tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未支付"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/query_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已支付"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:id="@+id/query_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消支付"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#ff6622"
        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<android.support.v7.widget.RecyclerView
    android:id="@+id/query_order_recyler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    >

</android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/query_order_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前地址为："
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginTop="200sp"
        />

    </LinearLayout>
</LinearLayout>